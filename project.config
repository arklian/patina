[access]
	inheritFrom = All-Projects
[submit]
	matchAuthorToCommitterDate = true
	action = rebase if necessary
[project]
	description = Patina Network https://www.patinanetwork.org/\n
[access "refs/*"]
	owner = group user/Henry Chen (arklian)
	owner = group user/xyzLucas (HaoxinLuo)
[access "refs/for/refs/*"]
	label-Code-Review = -2..+2 group Patina Network
	label-Code-Review = -2..+2 group user/Henry Chen (arklian)
	label-Verified = -1..+1 group Patina Network
	label-Verified = -1..+1 group user/Henry Chen (arklian)
	push = group Patina Network
	push = group user/Henry Chen (arklian)
	read = group Patina Network
	read = group user/Henry Chen (arklian)
	rebase = group Patina Network
	rebase = group user/Henry Chen (arklian)
	removeReviewer = group Patina Network
	removeReviewer = group user/Henry Chen (arklian)
	submit = group Patina Network
	submit = group user/Henry Chen (arklian)
	revert = group Patina Network
	revert = group user/Henry Chen (arklian)
	toggleWipState = group Patina Network
	toggleWipState = group user/Henry Chen (arklian)
[access "refs/heads/*"]
	create = group user/Henry Chen (arklian)
	push = group Patina Network
	push = +force group user/Henry Chen (arklian)
	read = group Patina Network
	read = group user/Henry Chen (arklian)
	label-Code-Review = -2..+2 group Patina Network
	label-Code-Review = -2..+2 group user/Henry Chen (arklian)
	label-Verified = -1..+1 group Patina Network
	label-Verified = -1..+1 group user/Henry Chen (arklian)
	rebase = group Patina Network
	rebase = group user/Henry Chen (arklian)
	pushMerge = group Patina Network
	pushMerge = group user/Henry Chen (arklian)
	submit = group Patina Network
	submit = group user/Henry Chen (arklian)
[access "refs/tags/*"]
	push = group user/Henry Chen (arklian)
	push = +force group user/Henry Chen (arklian)
[label "Code-Review"]
	function = NoBlock
	value = -2 This shall not be submitted
	value = -1 I would prefer this is not submitted as is
	value = 0 No score
	value = +1 Looks good to me, but someone else must approve
	value = +2 Looks good to me, approved
	copyCondition = changekind:TRIVIAL_REBASE_WITH_MESSAGE_UPDATE
	defaultValue = 0
[label "Verified"]
	value = -1 Fails
	value = 0 No score
	value = +1 Verified
	copyCondition = changekind:NO_CODE_CHANGE
	function = MaxWithBlock
	defaultValue = 0
[receive]
	requireChangeId = true
	maxObjectSizeLimit = 1m
[plugin "uploadvalidator"]
	rejectDuplicatePathnames = true
	rejectSubmodule = true
	rejectSymlink = true
	rejectWindowsLineEndings = true
[submit-requirement "Code-Review"]
	description = At least one +2 vote for label 'Code-Review' is required
	submittableIf = label:Code-Review=+2,user=non_uploader AND -label:Code-Review=MIN
	overrideIf = label:Code-Review=+2,user=arklian
	canOverrideInChildProjects = true
